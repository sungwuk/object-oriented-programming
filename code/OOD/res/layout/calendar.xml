    <Button
        android:id="@+id/btPlus1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/selector" />

</LinearLayout>